<section class="widget">
  <ul class="widget-share">
    <li class="share-item twitter">
      <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><span class="icon-twitter"></span></a>
    </li>
    <li class="share-item facebook">
      <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><span class="icon-facebook"></span></a>
    </li>
    <li class="share-item reddit">
      <a href="https://www.reddit.com/submit?url={{url absolute="true"}}&amp;title={{encode title}}"
         onclick="window.open(this.href, 'reddit-share', 'width=720,height=540');return false;"><span class="icon-reddit"></span></a>
    </li>
  </ul>
</section>